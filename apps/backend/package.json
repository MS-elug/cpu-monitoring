{
  "name": "@monitoring/backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "license": "UNLICENSED",
  "scripts": {
    "build": "rimraf dist && tsc --project ./tsconfig.json",
    "start": "cross-env TS_NODE_PROJECT=tsconfig.run.json node --require dotenv/config -r tsconfig-paths/register ./dist/index.js",
    "start:dev": "cross-env TS_NODE_TRANSPILE_ONLY=true nodemon --exec node -r dotenv/config -r ts-node/register  -r tsconfig-paths/register ./src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "dependencies": {
    "@monitoring/api-client": "1.0.0",
    "@types/morgan": "^1.9.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "loadavg-windows": "^1.1.1",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.25",
    "rimraf": "^3.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.34",
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  }
}
